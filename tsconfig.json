{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@mte/common/*": [ "./mte-common/*" ],
      "@mte/app-config": [ "./app-config.ts" ],
      "@mte/environment": [ "./mte-client/src/environments/environment.ts" ],
      "mongoose": [ "./node_modules/@types/mongoose" ],
      "stripe": [ "./node_modules/@types/stripe", "./node_modules/stripe" ]
    },
    "module": "commonjs",
    "target": "es2015",
    "lib": [
      "dom",
      "es2015",
      "es2016"
    ],
    "types": [ "node", "jest" ],
    "typeRoots": [
      "./mte-common/types",
      "./node_modules/@types"
    ],
    "noImplicitAny": false,
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "allowJs": false
  },
  "compileOnSave": false,
  "outDir": "dist/",
  "preserveWhitespaces": "off",
  "exclude": [
    "node_modules",
    "dist/"
  ]
}
