{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "dom",
      "es2015",
      "es2016"
    ],
    "types": [ "node" ],
    "typeRoots": [ "./node_modules/@types" ],
    "noImplicitAny": false,
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "allowJs": true
  },
  "compileOnSave": false,
  "exclude": [
    "node_modules",
    "dist/"
  ]
}
