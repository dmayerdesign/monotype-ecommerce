{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "@angular/*": [ "../node_modules/@angular/*" ],
      "rxjs/*": [ "../node_modules/rxjs/*" ],
      "@mte/common/*": [ "./src/mte_modules/common/*" ],
      "@mte/app-config": [ "./src/mte_modules/app-config.ts" ],
      "@mte/environment": [ "./src/environments/environment" ],
      "mongoose": [ "../node_modules/@types/mongoose" ],
      "stripe": [ "../node_modules/@types/stripe-node" ]
    }
  },
  "files": [
    "src/main.server.ts"
  ],
  "exclude": [
    "test.ts",
    "**/*.spec.ts"
  ],
  "angularCompilerOptions": {
    "entryModule": "src/app/app.server.module#AppServerModule"
  }
}
